<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".VehicleDetails">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_picture"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture"
        app:srcCompat="@drawable/back_btnwhite" />

    <TextView
        android:id="@+id/cardView_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

    <TextView
        android:id="@+id/vehicle_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:text="YBR Factor 125i ED"
        android:textColor="@color/dark_white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_1"
        app:layout_constraintStart_toStartOf="@+id/cardView_1"
        app:layout_constraintTop_toTopOf="@+id/cardView_1" />

    <TextView
        android:id="@+id/vehicle_brand"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:text="Yamaha"
        android:textColor="@color/dark_white"
        android:textSize="20sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/vehicle_name"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_name" />

    <TextView
        android:id="@+id/cardView_2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_1"
        app:layout_constraintTop_toBottomOf="@+id/cardView_1"/>

    <TextView
        android:id="@+id/vehicle_text_age"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/year_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_2"
        app:layout_constraintTop_toTopOf="@+id/cardView_2" />

    <ImageView
        android:id="@+id/vehicle_img_age"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_2"
        app:layout_constraintTop_toTopOf="@+id/cardView_2"
        app:srcCompat="@drawable/age_color" />

    <TextView
        android:id="@+id/vehicle_age"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:translationZ="10dp"
        android:padding="5dp"
        android:text="2018"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_img_age"
        app:layout_constraintStart_toStartOf="@+id/vehicle_text_age"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_age" />

    <TextView
        android:id="@+id/cardView_3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_corner"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_1"
        app:layout_constraintTop_toTopOf="@+id/cardView_2"/>

    <TextView
        android:id="@+id/vehicle_text_consum"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Consumo"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_3"
        app:layout_constraintTop_toTopOf="@+id/cardView_3" />

    <ImageView
        android:id="@+id/vehicle_img_consum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_3"
        app:layout_constraintTop_toTopOf="@+id/cardView_3"
        app:srcCompat="@drawable/gas_color" />

    <TextView
        android:id="@+id/vehicle_consum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:translationZ="10dp"
        android:padding="5dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/vehicle_text_consum"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_consum" />

    <TextView
        android:id="@+id/vehicle_consum_sufix"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="@string/km_l_text"
        android:textColor="@color/dark_white"
        android:textSize="14sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toEndOf="@+id/vehicle_consum"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_consum" />

    <TextView
        android:id="@+id/cardView_4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_2"
        app:layout_constraintTop_toBottomOf="@+id/cardView_2" />

    <TextView
        android:id="@+id/vehicle_text_capacity"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/capacity_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_4"
        app:layout_constraintTop_toTopOf="@+id/cardView_4" />

    <ImageView
        android:id="@+id/vehicle_img_capacity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_4"
        app:layout_constraintTop_toTopOf="@+id/cardView_4"
        app:srcCompat="@drawable/capacity" />

    <TextView
        android:id="@+id/vehicle_capacity"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:translationZ="10dp"
        android:padding="5dp"
        android:text="45"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/vehicle_text_capacity"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_capacity" />

    <TextView
        android:id="@+id/vehicle_capacity_sufix"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="@string/liters_text"
        android:textColor="@color/dark_white"
        android:textSize="14sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toEndOf="@+id/vehicle_capacity"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_capacity" />

    <TextView
        android:id="@+id/cardView_5"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_corner"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_3"
        app:layout_constraintTop_toTopOf="@+id/cardView_4" />

    <TextView
        android:id="@+id/vehicle_text_autonomy"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/autonomy_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_5"
        app:layout_constraintTop_toTopOf="@+id/cardView_5" />

    <ImageView
        android:id="@+id/vehicle_img_autonomy"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_5"
        app:layout_constraintTop_toTopOf="@+id/cardView_5"
        app:srcCompat="@drawable/double_autonomy" />

    <TextView
        android:id="@+id/vehicle_autonomy"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:translationZ="10dp"
        android:padding="5dp"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/vehicle_text_autonomy"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_autonomy" />

    <TextView
        android:id="@+id/vehicle_autonomy_sufix"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="@string/km_txt"
        android:textColor="@color/dark_white"
        android:textSize="14sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toEndOf="@+id/vehicle_autonomy"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_autonomy" />

    <TextView
        android:id="@+id/cardView_6"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_4"
        app:layout_constraintTop_toBottomOf="@+id/cardView_4" />

    <TextView
        android:id="@+id/vehicle_text_km"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/actual_km_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_6"
        app:layout_constraintTop_toTopOf="@+id/cardView_6" />

    <ImageView
        android:id="@+id/vehicle_img_km"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_6"
        app:layout_constraintTop_toTopOf="@+id/cardView_6"
        app:srcCompat="@drawable/speed" />

    <TextView
        android:id="@+id/vehicle_km"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:translationZ="10dp"
        android:padding="5dp"
        android:text="150000"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/vehicle_text_km"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_km" />

    <TextView
        android:id="@+id/vehicle_km_sufix"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="@string/km_txt"
        android:textColor="@color/dark_white"
        android:textSize="14sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toEndOf="@+id/vehicle_km"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_text_km" />

    <Button
        android:id="@+id/refuel_button"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/green"
        android:elevation="2dp"
        android:text="@string/fuel_text"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_5"
        app:layout_constraintTop_toTopOf="@+id/cardView_6" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/edit_text"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/blue"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/cardView_6"
        app:layout_constraintTop_toBottomOf="@+id/cardView_6" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="@string/delete"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/refuel_button"
        app:layout_constraintTop_toTopOf="@+id/edit_button" />

</androidx.constraintlayout.widget.ConstraintLayout>