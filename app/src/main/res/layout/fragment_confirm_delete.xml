<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfirmDelete">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_confirm_delete"/>

    <TextView
        android:id="@+id/confirm_delete"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="250dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/darkgray"
        android:elevation="2dp"
        android:translationZ="12dp" />

    <TextView
        android:id="@+id/background_confirm_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayopaque"
        android:elevation="2dp"
        android:translationZ="10dp" />

    <TextView
        android:id="@+id/text_confirm_delete"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="55dp"
        android:layout_marginVertical="280dp"
        android:elevation="2dp"
        android:text="Tem certeza que deseja remover este veÃ­culo?"
        android:textColor="@color/darkwhite"
        android:textSize="18sp"
        android:translationZ="12dp" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="55dp"
        android:layout_marginVertical="360dp"
        android:backgroundTint="@color/blue"
        android:elevation="2dp"
        android:text="Cancelar"
        android:translationZ="14dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="245dp"
        android:layout_marginVertical="360dp"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:text="Remover"
        android:translationZ="14dp"
        app:cornerRadius="10dp" />

</FrameLayout>