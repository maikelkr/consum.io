<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BB56"
    tools:context=".StartScreen">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo_image"
        app:srcCompat="@drawable/profile_picture" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_logo" />

    <TextView
        android:id="@+id/my_vehicles_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:text="Meus veÃ­culos"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/vehicle_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logo_image"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <ImageView
        android:id="@+id/vehicle_picture"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="@+id/vehicle_card"
        app:layout_constraintTop_toTopOf="@+id/vehicle_card"
        app:srcCompat="@drawable/vehicle_picture" />

    <TextView
        android:id="@+id/vehicle_name"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="66dp"
        android:ellipsize="end"
        android:lines="2"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp"
        android:translationZ="90dp"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_card"
        app:layout_constraintTop_toTopOf="@+id/vehicle_card" />

    <TextView
        android:id="@+id/vehicle_age"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:text="Ano 2000"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_card"
        app:layout_constraintStart_toStartOf="@+id/vehicle_card" />

    <ImageView
        android:id="@+id/remove_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_card"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_card"
        app:srcCompat="@drawable/remove_btn" />

    <androidx.cardview.widget.CardView
        android:id="@+id/vehicle_card"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_corner"
        android:elevation="10dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

    <ImageView
        android:id="@+id/add_vehicle_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="46dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>